{
  "name": "agp",
  "version": "1.0.0",
  "description": "Alius - PlayGround",
  "license": "BSD",
  "repository": "palius/agp",
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=3.0.0"
  },
  "main": "../dist/index.js",
  "jsnext:main": "../dist/index.js",
  "files": [
    "lib",
    "src",
    "test"
  ],
  "scripts": {
    "build": "gulp build",
    "compile": "babel --presets metal -d lib/ src/",
    "postinstall": "npm run build",
    "prepublish": "npm run compile",
    "start": "http-server ../ -p 4000",
    "test": "karma start",
    "watch": "webpack --watch"
  },
  "keywords": [
    "metal"
  ],
  "babel": {
    "presets": [
      "metal",
      "metal-jsx"
    ]
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "metal-ajax": "^2.1.1",
    "metal-dom": "^2.13.2",
    "metal-events": "^2.13.2",
    "metal-jsx": "^2.0.0",
    "metal-state": "^2.13.2",
    "wedeploy": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.34",
    "@types/webpack": "^3.0.13",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-node-env-inline": "^0.1.1",
    "babel-preset-metal": "^4.0.0",
    "babel-preset-metal-jsx": "^0.0.2",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-copy": "^1.0.1",
    "http-server": "^0.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "metal-karma-config": "^2.3.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.6",
    "typescript": "^2.5.2",
    "webpack": "^3.0.0",
    "webpack-stream": "^4.0.0"
  },
  "jest": {
    "resolver": "metal-lerna-jest-resolver",
    "snapshotSerializers": [
      "metal-jest-serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.scss$": "identity-obj-proxy"
    }
  }
}
